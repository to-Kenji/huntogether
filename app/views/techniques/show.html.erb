<div class="card text-center">
  <div class="card-header">
    <h2><%= @technique.title %></h2>
    <% if @technique.user.id == current_user.id %>
      <h3>
        <%= link_to edit_technique_path(@technique) do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
      </h3>
    <% end %>
  </div>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <div class="monster-area">
          モンスター：<strong><%= @technique.monster.name %></strong>
        </div>
        <div class="weapon-area">
          武器：<strong><%= @technique.weapon.name %></strong>
        </div>
        <div class="difficulty-area">
          難易度：<strong><%= @technique.difficulty %></strong>
        </div>
      </li>
      <li class="list-group-item"><%= simple_format(@technique.body) %></li>
      <% if @technique.youtube_url? %>
        <li class="list-group-item" id="youtube">
          <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @technique.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </li>
      <% end %>
      <li class="list-group-item">
        <div class="user-area d-flex justify-content-center">
          <div class="user-info mr-3">
            <%= link_to user_path(@user) do %>
              <% if @user.image? %>
                <%= image_tag @user.image.thumb40.url, class: 'icon' %>
              <% else %>
                <%= image_tag "/assets/default.png", class: 'default-icon-sm' %>
              <% end %>
              <%= @user.name %>
            <% end %>
          </div>
          <div class="follow-button">
            <%= render 'relationships/follow_button' %>
          </div>
        </div>

        <div class="created-time mt-2">
          投稿日：<%=@technique.created_at.strftime('%Y/%m/%d') %>
        </div>
        <div class="like-button">
          <div id="technique_<%=@technique.id %>" class="mt-3">
            <%= render 'technique', technique: @technique %>
          </div>
        </div>
        <div class="mt-3">
          <div id="favorite-button">
            <%= render 'bookmarks/favorite_button' %>    
          </div>
          <div id="favors-count">
            お気に入り登録数：<%= @technique.favors.count %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
<%= render 'comments/form', { comment: @comment, technique: @technique} %>

<div id="comments-area" class="mt-3">
  <%= render 'comments/index', comments: @comments %>
</div>