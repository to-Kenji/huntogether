<% if current_user.already_liked?(technique) %>
  <%= link_to destroy_like_path(technique), method: :DELETE, remote: true do %>
    <i class="fa fa-heart fa-2x"></i>
  <% end %>
<% else %>
  <%= link_to create_like_path(technique), method: :POST, remote: true, class: 'a' do %>
    <i class="far fa-heart fa-2x"></i>
  <% end %>
<% end %>