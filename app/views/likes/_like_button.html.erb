<% if current_user.already_liked?(technique) %>
  <%= form_with(model: current_user.likes.find_by(technique_id: technique.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :technique_id, technique.id %>
    <%= f.submit 'いいね解除' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.likes.build, local: true) do |f| %>
    <%= hidden_field_tag :technique_id, technique.id %>
    <%= f.submit 'いいね' %>
  <% end %>
<% end %>