<% if current_user.already_favorited?(technique) %>
  <%= form_with(model: current_user.bookmarks.find_by(technique_id: technique.id), local: true, method: :delete) do |f|%>
    <%= hidden_field_tag :technique_id, technique.id %>
    <%= f.submit 'お気に入り解除' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.bookmarks.build, local: true) do |f| %>
    <%= hidden_field_tag :technique_id, technique.id %>
    <%= f.submit 'お気に入り登録' %>
  <% end %>
<% end %>