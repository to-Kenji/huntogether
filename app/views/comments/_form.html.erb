<%= form_with(model: [technique, comment], remote: true) do |f| %>
  <div class="row mt-3 justify-content-center">
    <div class="form-group col-md-7">
      <%= f.text_area :content, class: 'form-control', placeholder: 'コメントを入力', rows: 1 %>
    </div><br>
    <div class="col-md-1">
      <%= f.submit '投稿', class: 'btn btn-outline-dark' %>
    </div>
  </div>
  <% end %>
