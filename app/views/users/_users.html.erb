<% users.each do |user| %>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <div class="user-info">
            <div class="user-avatar">
              <%= link_to user_path(user) do %>
                <% if user.image? %>
                  <%= image_tag user.image.url, class: 'avatar avatar-md' %>
                <% else %>
                  <%= image_tag asset_path("default.png"), class: 'avatar avatar-md' %>
                <% end %>
              <% end %>
            </div>
            <div class="user-name">
              <%= link_to user_path(user) do %>
                <%= user.name %>
              <% end %>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>