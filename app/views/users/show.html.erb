<div class="row justify-content-around">
  <div class="profile col-md-4 mb-3">
    <div class="card text-center">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <div class="image">
            <% if @user.image? %>
              <%= image_tag @user.image.thumb100.url, class: 'icon' %>
            <% else %>
              <%= image_tag "/assets/default.png", class: 'default-icon' %>
            <% end %>
          </div>
          <h4 class="p-2"><%= @user.name %></h4>
        </li>
        <li class="list-group-item">
          <%= simple_format(@user.profile) %>
          <% if @user.id == current_user.id %>
            <%= link_to 'プロフィールの編集', edit_user_registration_path(id: current_user.id), class: 'btn btn-block btn-info' %>
          <% end %>
          <div class="logout-button m-2">
            <% if current_user == @user %>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:'btn btn-outline-danger' %>
            <% else %>
              <%= render 'relationships/follow_button' %>
            <% end %>
          </div>
        </li>
        <li class="list-group-item">
          ここに評価のアベレージ（星いくつ）
        </li>
      </ul>
    </div>
  </div>

  <div class="col-md-7">
    <div id="user-techniques">
      <%= render 'techniques/techniques', techniques: @techniques %>
    </div>
  </div>
</div>