<div class="row">
  <div class="menu col-md-5">
    <aside>
      <div class="search-form">
        <%= render 'layouts/shared/search_form', content: 'Following', url: timeline_index_path %>
      </div>
      <div class="ranking">
        <%= render 'layouts/shared/ranking' %>
      </div>
    </aside>
  </div>
  <div class="techniques col-md-7">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="<%= root_path %>">All</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="<%= timeline_index_path %>">Following</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= favorites_user_path(current_user) %>">Favorites</a>
      </li>
    </ul>
    <div id="technique-list">
      <%= render 'techniques/techniques', techniques: @following_techniques %>
    </div>
    <div class="more-list">
      <%= link_to_next_page @following_techniques, icon('fas', 'plus-circle'), remote: true, class: 'paginate-button', id: 'paginate' %>     
    </div>
  </div>
</div>
